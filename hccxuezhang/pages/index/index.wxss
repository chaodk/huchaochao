form{
  width: 100%;
}
.m-sea{
  width: 90%;
  margin: 20px auto;
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 6px 6px 3px #b1b2b1;
}
.m-sea input{
  height: 50px;
  width: 90%;
  padding-left: 5%;
}
.m-sea button{
  height: 50px;
  width: 150rpx;
  background-color: #FFEE9B;
  border-radius:0 8px 8px 0px;
  font-size: 44rpx;
  line-height: 50px;
  text-align: center;
  font-weight: 450
}
.m-sea button::after{
  border: none;
}
.subhover{
  background-color: #000;
  color: #fff;  
}

.tips{
  width: 100%;
  height: 45px;
  line-height: 45px;
  /* background-color: #fff; */
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  justify-content:  center;
  font-size: 28rpx;
  color: #b1b2b1;
  border-radius: 50%;
  /* box-shadow: 0px 6px 3px #b1b2b1; */
}
.tips image{
  width: 25px;
  vertical-align: middle;
  margin-top: 22rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.tool_title{
  width: 100%;
  display: block;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-size: 44rpx;
}