/* pages/lsit/lsit.wxss */
.list-heard{
  width: 100%;
  height: 45px;
  line-height: 45px;
  background-color: #fff;
  font-size: 36rpx;
  text-align: center;
  box-shadow: 0px 6px 6px #b1b2b1;
  margin-bottom: 6px;
}
.list-li{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.lsit-item{
  display: flex;
  flex-direction: row;
  height: 45px;
  line-height: 45px;
  background-color: #fff;
  justify-content:  space-between;
  border-bottom: 1px #efefef dotted;
}
.lsit-item image{
  width: 50rpx;
  height: 50rpx;
}
.lsit-item-left{
  margin-left: 20rpx;
}
.lsit-item-right{
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.seainput{
  font-size: 30rpx;
}